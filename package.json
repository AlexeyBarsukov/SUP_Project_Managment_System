{
  "name": "project-management-bot",
  "version": "1.0.0",
  "description": "Telegram bot for project management with role-based access",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:watch": "nodemon --watch src --ext js,json --exec 'node src/app.js'",
    "dev:debug": "nodemon --inspect src/app.js",
    "test": "jest",
    "build": "echo 'No build step required for Node.js'",
    "postinstall": "echo 'Installation completed'",
    "check-env": "node check-env.js",
    "init-db": "node init-db.js",
    "test-db": "node test-db-connection.js",
    "test-simple": "node test-simple-connection.js",
    "debug-db": "node debug-db-url.js",
    "prestart": "node check-env.js && node init-db.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "project-management",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "moment": "^2.29.4",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "telegraf": "^4.15.6"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  }
}
